    </UserControl.Resources>

    <StackPanel>
    <Grid Background="{DynamicResource BlurColor}">

        <!-- Linha -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Grid>
                <!-- Coluna -->
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
        
         <Path Stretch="Uniform"
               Width="28"
               Height="28"
               Margin="3,0,3,0"
               Fill="{DynamicResource text.primary}"
               Data="{DynamicResource BlueOff}"/>

                <Grid Grid.Column="1">

                    <!-- Linha -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Bluetooth"
                               FontSize="14"
                               Margin="0,2,0,0"
                               Foreground="{DynamicResource text.primary}"
                               HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="1"
                               Text="Desligado"
                               FontSize="14"
                               Margin="0,0,0,0"
                               Foreground="{DynamicResource text.secondary}"
                               HorizontalAlignment="Left"/>
                </Grid>
            </Grid>
        </StackPanel>
            <StackPanel Width="360" Grid.Row="1" >
                <TextBlock Foreground="{DynamicResource text.primary}"
                       Margin="8,25,0,0"
                       FontSize="13">
                
                Ative o Bluetooth para exibir os dispositivos

                </TextBlock>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
